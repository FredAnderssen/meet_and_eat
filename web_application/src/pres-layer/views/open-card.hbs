<section class="hero">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Meet And Eat
      </h1>
    </div>
  </div>
</section>

<div class="columns is-centered">

    <div class="column is-multiline is-4 is-centered">
      <div class="box">
        <article class="media">
          <div class="media-left">
            <figure class="image is-64x64">
              <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
            </figure>
          </div>
          <div class="media-content">
            <div class="content">
              <p>
                <strong>{{card.cardTitle}}</strong>  <small>{{card.cardDate}}</small>
                <br>
                {{card.cardDesc}}
              </p>
            </div>
          </div>
        </article>
      </div>
      
      <form action="/create-comment/{{card.cardId}}" method="POST" id="createCommentForm" name="createCommentForm">
        <textarea class="textarea" placeholder="Add comment" id="commentText" name="commentText"></textarea>
        <input type="submit" value="Create comment">
      </form>

    </div>

      <div class="column is-2">
      {{#each comments}}

      <div class="box">
        {{this.comment}}
      </div>
      {{/each}}

      </div>
</div>
